{
  "name": "amazon-sp-api-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Amazon Selling Partner API",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node\" src/index.ts",
    "build": "rimraf ./build && tsc && shx chmod +x build/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "amazon",
    "sp-api",
    "mcp",
    "claude"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bin": {
    "amazon-sp-api-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.2",
    "@types/aws4": "^1.11.6",
    "aws4": "^1.13.2",
    "axios": "^1.12.0",
    "dotenv": "^16.3.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
